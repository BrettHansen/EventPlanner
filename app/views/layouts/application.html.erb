<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
  <div id="header">
    <%= link_to 'EventPlanner', root_path %>
  </div>
  <!-- end header -->

  <div id="nav">
    <ul>

      <% if logged_in? %>
          <li>
            <%= link_to "Logout (#{current_user.username})", logout_path, method: 'delete' %>
          </li>
      <% else %>
          <li>
            <%= link_to 'Login/Register', register_path %>
          </li>
      <% end %>
    </ul>
  </div>
  <!-- end nav -->

  <div id="content">

    <% flash.each do |key, value| %>
        <p id="message"><%= value %></p>
    <% end %>

    <%= yield %>

    </div><!-- end content -->

  <div id="footer">
    &copy; EventPlanner <%= Date.today.year %>
  </div><!-- end footer -->
</div><!-- end container -->

</body>
</html>
