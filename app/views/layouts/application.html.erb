<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
  <div id="header">
    <%= link_to 'EventPlanner', root_path %>
    <% if user_signed_in? && !current_user.avatar.nil? %>
        <%= image_tag(current_user.avatar.url) %>
        <span><%= current_user.email %></span>
  <% end %>
  </div>
  <!-- end header -->

  <div id="cssmenu">
    <ul>

      <% if user_signed_in? %>
          <li class="<%= is_active?(my_events_path) %>">
            <%= link_to 'My Events', my_events_path %>
          </li>
          <li class="<%= is_active?(root_path) %>">
            <%= link_to 'Featured Events', root_path %>
          </li>
          <li class="<%= is_active?(edit_user_registration_path) %>">
            <%= link_to 'Settings', edit_user_registration_path %>
          </li>
          <li>
            <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %>
          </li>
      <% else %>
          <li class="<%= is_active?(new_user_registration_path) %>">
            <%= link_to 'Register', new_user_registration_path %>
          </li>
          <li class="<%= is_active?(new_user_session_path) %>">
            <%= link_to 'Sign in', new_user_session_path %>
          </li>
      <% end %>
    </ul>
  </div>
  <!-- end nav -->

  <div id="content">

    <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>

  </div>
  <!-- end content -->

  <div id="footer">
    &copy; EventPlanner <%= Date.today.year %>
  </div>
  <!-- end footer -->
</div>
<!-- end container -->

</body>
</html>
